<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blueDark</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Do something manly with colors achieved :D -->
    <style name="AppThemeManly" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lessManly</item>
        <item name="colorPrimaryDark">@color/manly</item>
        <item name="colorAccent">@color/lessManly</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>
