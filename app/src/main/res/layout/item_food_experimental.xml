<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <ImageView
        android:id="@+id/item_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/undefined"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_chicken" />

    <View
        android:id="@+id/item_shadow"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/shadow"
        android:layout_alignBottom="@id/item_background"/>

    <LinearLayout
        android:id="@+id/item_info_layout"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@android:color/background_light"
        android:elevation="8dp"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/item_food_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Jokapojan kalapala"
            android:textColor="@android:color/primary_text_light"
            android:textSize="18sp" />

        <!-- TODO: divider style -->
        <View
            android:layout_width="240dp"
            android:layout_height="1px"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/item_food_secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="4"
            android:text="perunat, kermaviilikastike, salaatti\nei-kala kala\nis this real life?"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="22.10"
            android:textSize="14sp" />


    </LinearLayout>
</RelativeLayout>