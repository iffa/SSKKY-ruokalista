<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="email.crappy.ssao.ruoka.fragment.ViewPagerFragment">

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/viewPagerTab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingBottom="8dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:clipToPadding="false"
        android:background="?attr/colorPrimary"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorColor="@color/black_20"
        app:stl_indicatorThickness="40dp"
        app:stl_indicatorCornerRadius="20dp"
        app:stl_underlineThickness="0dp"
        app:stl_underlineColor="@color/transparent"
        app:stl_dividerThickness="0dp"
        app:stl_dividerColor="@color/transparent"
        app:stl_defaultTabTextColor="@color/white"
        app:stl_defaultTabTextHorizontalPadding="20dp"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/viewPagerTab"
        />

</RelativeLayout>
