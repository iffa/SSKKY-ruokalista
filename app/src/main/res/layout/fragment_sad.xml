<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="email.crappy.ssao.ruoka.ui.fragment.SadFragment">

    <LinearLayout
        android:id="@+id/sadFaceLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sadFaceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableTop="@drawable/ic_emoji_sad"
            android:text="@string/sad_title"
            android:textColor="@android:color/primary_text_light"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/sad_message"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="12sp" />

    </LinearLayout>
</RelativeLayout>
