<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_list_food"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/item_date"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="ke 22.10"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_food_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_date"
            android:layout_toLeftOf="@+id/item_food_type"
            android:layout_toRightOf="@id/item_date"
            android:layout_toStartOf="@id/item_food_type"
            android:text="Jokapojan kalapala"
            android:textColor="@android:color/primary_text_light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_food_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_food_main"
            android:layout_toEndOf="@id/item_date"
            android:layout_toLeftOf="@+id/item_food_type"
            android:layout_toRightOf="@id/item_date"
            android:layout_toStartOf="@id/item_food_type"
            android:ellipsize="end"
            android:text="yrttikastike, perunat\nsalaatti"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/item_food_type"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/undefined"
            android:src="@drawable/ic_cutlery" />


    </RelativeLayout>

    <View
        android:id="@+id/item_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />

</LinearLayout>
