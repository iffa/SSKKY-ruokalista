            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:text="viikko 44 (22.10-25.10)"
            android:textColor="@android:color/primary_text_light"
            android:textSize="18sp" />

        <include layout="@layout/view_divider" />

        <!-- I hate this -->
        <LinearLayout
            android:id="@+id/list_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/item_date1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="ke 22.10"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_food_main1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jokapojan kalapala"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/item_food_secondary1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="yrttikastike, perunat\nsalaatti"
                    android:textColor="@android:color/secondary_text_light"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/item_food_type1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/undefined"
